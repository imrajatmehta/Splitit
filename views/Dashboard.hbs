                <h5>Your Friends</h5>
                {{#if friendsList}}
                {{#gtlength friendsList.length}}
                <div class="card example-1 square scrollbar-dusty-grass square thin">
                    {{else}}
                    <div class="card">
                        {{/gtlength}}




                        <div class="card-group-flush">

                            {{#each friendsList}}

                            <li class="list-group-item">{{this}}</li>
                            {{/each}}


                        </div>

                    </div>
                    {{else}}
                    <li class="list-group-item">No Friends</li>
                    {{/if}}


                </div>
            </div>
